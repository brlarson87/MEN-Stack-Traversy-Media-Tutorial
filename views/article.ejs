<% include partials/header %>
  <h1><%= article.title %></h1>
  <h5>Written by: <%= author %></h5>
  <p><%= article.body %></p>
  <hr>
  <% if(user) { %>
    <% if(user.id === article.author) { %>
      <a class="btn btn-primary" href="/articles/edit/<%= article._id%>">Edit</a>
      <a class="btn btn-danger delete-article" href="#" data-id="<%= article._id%>">Delete</a>
    <% } %>
  <% } %>
<% include partials/footer %>
